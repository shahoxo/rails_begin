<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h2>GamingMouseカート</h2>
<table>
	<% @cart.line_items.each do |item|%>
		<tr>
			<td><%= item.quantity %>&times;</td>
			<td><%= item.product.title %></td>
			<td class="item_price "><%= number_to_currency(item.total_price, unit: "¥",
				precision: 0, format: "%u %n") %></td>
		</tr>
	<% end %>
	<tr class="total_line">
		<td colspan="2">合計</td>
		<td class="total_cell"><%= number_to_currency(@cart.total_price, unit: "¥",
			precision: 0, format: "%u %n") %></td>
	</tr>
</table>

<%= button_to 'カートを空にする', @cart, method: :delete, confirm: '本当によいですか？' %>
